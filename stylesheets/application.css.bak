/* application.css */
body {border-top:#333 solid 5px;}
#header h1 a {text-decoration:none;font-family:'Permanent Marker',arial,serif;font-size:1.4em;}
ul.list {list-style:none;padding:0;margin:0;}
ul.border-list li {border-bottom:1px solid #ddd;padding:1em;}
#navigation {font-family:Raleway,arial,serif;}
#navigation ul {text-align:right;}
#navigation a {font-size:2em;color:#111;text-decoration:none;}
#navigation a:focus, #navigation a:hover {color:#09f;}
#navigation span {color:#be3030;}
.post-meta {text-align:right;}
#footer {background:#111;-moz-box-shadow: 0 0 15px #666;-webkit-box-shadow: 0 0 15px#666;box-shadow: 0 0 15px #666;}
#elsewhere {text-align:right;}
#footer h3 {color:#eee;}
#footer p {color:#ddd;}
#footer .copyright p {text-transform:uppercase;text-align:right;}
#footer .copyright a {text-decoration:none;}
.badges {background-image:url(/images/badges.png);background-color:transparent;background-repeat:no-repeat;}
.badges a {display:block;height:30px;width:30px;}
#facebook_badge {height:30px;width:30px;background-position:-0px -0px;}
#flickr_badge {height:30px;width:30px;background-position:-30px -0px;}
#linkedin_badge {height:30px;width:30px;background-position:-60px -0px;}
#github_badge {height:30px;width:30px;background-position:-90px -0px;}
#lastfm_badge {height:30px;width:30px;background-position:-120px -0px;}
#instagram_badge {height:30px;width:30px;background-position:-150px -0px;}

